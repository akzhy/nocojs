{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "include": ["./api.ts"],
  "exclude": ["node_modules", "bench", "__test__"]
}
