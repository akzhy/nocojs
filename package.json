{
  "name": "lazy-workspace",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugin-rollup/examples",
    "packages/webpack-loader/examples",
    "packages/rspack-loader/examples",
    "packages/parcel-transformer/examples"
  ],
  "scripts": {
    "build:all": "lerna run build",
    "build:packages": "lerna run build --ignore '@nocojs/*example*' --ignore '*example*'",
    "build:non-core-packages": "lerna run build --ignore '@nocojs/*example*' --ignore '*example*' --ignore '@nocojs/core' --no-bail",
    "build:core-rust": "lerna run build --scope '@nocojs/core'",
    "build:core-js": "lerna run build:js --scope '@nocojs/core'",
    "changeset": "changeset"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.5"
  },
  "devDependencies": {
    "lerna": "^8.2.3"
  }
}
